<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2"><%= t('moon.actions.show') %></h1>
</div>

<%= form_with(model: @moon, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', readonly: true %>
  </div>
  <div class="mb-3">
    <%= form.label :mass %>
    <%= form.text_field :mass, class: 'form-control', readonly: true %>
  </div>
  <div class="mb-3">
    <%= form.label :planet_id %>
    <%= form.select :planet_id, Planet.order(:name).pluck(:name, :id), {}, class: 'form-select', disabled: true %>
  </div>
  <div class="mb-3">
    <%= form.label :distance_from_planet %>
    <%= form.text_field :distance_from_planet, class: 'form-control', readonly: true %>
  </div>
  <div class="mb-3">
    <%= form.label :orbital_period %>
    <%= form.text_field :orbital_period, class: 'form-control', readonly: true %>
  </div>
  <div class="mb-3 form-check">
    <%= form.check_box :tidally_locked, class: 'form-check-input', disabled: true %>
    <%= form.label :tidally_locked, class: "form-check-label" %>
  </div>
<% end %>
<%= link_to t('actions.edit'), edit_moon_path(@moon), class: 'btn btn-primary min-width-btn' %> 
<%= link_to t('actions.back'), :back, class: "btn btn-light min-width-btn" %>
